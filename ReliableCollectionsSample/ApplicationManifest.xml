<?xml version="1.0" encoding="utf-8" ?>
<ApplicationManifest
    ApplicationTypeName="ReliableCollectionsSampleType"
    ApplicationTypeVersion="1.0"
    xmlns="http://schemas.microsoft.com/2011/01/fabric"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <Description>ReliableCollectionsSample service.</Description>
        <ServiceManifestImport>
            <ServiceManifestRef ServiceManifestName="RCWebService" ServiceManifestVersion="1.0.0" />
        </ServiceManifestImport>
        <ServiceManifestImport>     
            <ServiceManifestRef ServiceManifestName="RCMainService" ServiceManifestVersion="1.0.0" />
        </ServiceManifestImport>
  <Parameters>
      <Parameter Name="InstanceCount" DefaultValue="1" />
  </Parameters>
    <DefaultServices>
        <Service Name="RCMainService">
            
                <StatefulService ServiceTypeName="RCMainService" TargetReplicaSetSize="3" MinReplicaSetSize="3">
                    <UniformInt64Partition PartitionCount="1" LowKey="-9223372036854775808" HighKey="9223372036854775807" />
                </StatefulService>
        </Service>
        <Service Name="RCWebService">
            
                <StatelessService ServiceTypeName="RCWebService" InstanceCount="[InstanceCount]">
                    <SingletonPartition />
                </StatelessService>
        </Service>
    </DefaultServices>

</ApplicationManifest>
